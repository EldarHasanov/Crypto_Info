    <Border Background="#272537"
            CornerRadius="20">
        <Border.DataContext>
            <vm:MainWindowViewModel/>
        </Border.DataContext>
        <Border.Resources>
            <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"></cmd:CloseApplicationCommand>
        </Border.Resources>
        <Border.InputBindings>
            <KeyBinding Modifiers="Control" Key="Q" Command="{StaticResource CloseApplicationCommand}"></KeyBinding>
        </Border.InputBindings>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text ="{Binding Title}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="AliceBlue"
                       FontSize="24"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home"
                             Height="50"
                             Foreground="AliceBlue"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Cryptocurrency info"
                             Height="50"
                             Foreground="AliceBlue"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Search cryptocurrency"
                             Height="50"
                             Foreground="AliceBlue"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Exit"
                             Height="50"
                             Foreground="AliceBlue"
                             FontSize="14"
                             VerticalAlignment="Bottom"
                             Command="{Binding CloseApplicationCommand}"
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <TextBox Width="250"
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource TextBoxTheme}"></TextBox>

            <ContentControl Grid.Column="1"
                            Grid.Row="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
